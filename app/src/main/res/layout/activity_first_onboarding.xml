<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/white"
    tools:context=".FirstOnboarding">

    <ImageView
        android:id="@+id/ikan_fragment_satu"
        android:layout_width="match_parent"
        android:layout_height="418dp"
        android:contentDescription="@string/ikan"
        android:src="@drawable/onboard_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judul_fragmen_satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:text="@string/title_onboarding_1"
        android:gravity="center"
        android:textColor="#004AAD"
        android:maxLines="2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ikan_fragment_satu" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="65dp"
        android:gravity="center"
        android:text="@string/teks_onboarding_1"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul_fragmen_satu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        android:textColor="#004AAD"
        app:strokeColor="#004AAD"
        app:strokeWidth="2dp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Lewati"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_next"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="50dp"
        app:cornerRadius="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Selanjutnya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_skip"/>

</androidx.constraintlayout.widget.ConstraintLayout>